{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["es2021"],
      "typeRoots": [
        "./node_modules/@types",
        "src/helper/types"
      ],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"]
  }
  